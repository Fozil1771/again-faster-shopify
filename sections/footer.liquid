{{ "footer.css" | asset_url | stylesheet_tag }}

<div class="footer-wrapper color-{{ section.settings.color_scheme }}">
	<div class="af-pattern">{% render 'af-pattern' %}</div>
	<div class="container">
		<footer class="footer">
			<div class="footer-inner">
                <div class="footer-block--newsletter">
				{%- if section.settings.newsletter_enable -%} {%- if
				section.settings.newsletter_heading != blank -%}
				<h2 class="footer-block__heading">
					{{ section.settings.newsletter_heading | escape | upcase }}
				</h2>
				{%- endif -%}
				<div class="footer-newsletter">
					<div class="newsletter-input">
						<input placeholder="{{ section.settings.input_placeholder | escape }}" type="text" />
						<button>{% render 'arrow-right' %}</button>
					</div>
				</div>
				{%- endif -%}

                {%- if section.settings.show_social -%}
                    <ul class="footer__list-social list-social" role="list">
                        {%- if settings.social_mail_link != blank -%}
                        <li class="list-social__item">
                            <a href="{{ settings.social_mail_link }}" class="link list-social__link" >
                            {%- render 'icon-mail' -%}
                            {% if settings.show_social_label %}
                                <span class="visually-hidden">{{ 'general.social.links.mail' | t }}</span>
                            {% endif %}
                            </a>
                        </li>
                        {%- endif -%}
                        {%- if settings.social_facebook_link != blank -%}
                        <li class="list-social__item">
                            <a href="{{ settings.social_facebook_link }}" class="link list-social__link" >
                            {%- render 'icon-facebook' -%}
                            {% if settings.show_social_label %}
                                <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                            {% endif %}
                            </a>
                        </li>
                        {%- endif -%}
                        
                        {%- if settings.social_instagram_link != blank -%}
                        <li class="list-social__item">
                            <a href="{{ settings.social_instagram_link }}" class="link list-social__link" >
                            {%- render 'icon-instagram' -%}
                            {% if settings.show_social_label %}
                                <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                            {% endif %}
                            </a>
                        </li>
                        {%- endif -%}
                        
                    </ul>
            {%- endif -%}
			</div>

			{% for block in section.blocks %}

			<div class="footer-block">
				{%- if block.settings.heading != blank -%}
				<h2 class="footer-block__heading">
					{{- block.settings.heading | escape | upcase -}}
				</h2>
				{%- endif -%} 
                {% case block.type %} 
                {% when 'text' %}
				<div class="footer-block__details">
					{{ block.settings.subtext }}
				</div>
				{%- when 'link_list' -%} {%- if block.settings.menu != blank and
				block.settings.heading != blank -%}
				<ul class="footer-block__details footer-list">
					{%- for link in block.settings.menu.links -%}
					<li class="footer-list__item">
						<a href="{{ link.url }}"
							class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
							{{ link.title }}
						</a>
					</li>
					{%- endfor -%}
				</ul>
				{%- endif -%} {% endcase %}
			</div>

			{% endfor %}
            </div>
			
             <div class="footer-copyright">
               
                <p>{{ section.settings.copyright }}</p>
               
            </div>
		</footer>
	</div>
</div>

{% schema %}
{
    "name": "t:sections.footer.name",
    "blocks": [
        {
            "type": "link_list",
            "name": "t:sections.footer.blocks.link_list.name",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "default": "Quick links",
                    "label": "t:sections.footer.blocks.link_list.settings.heading.label",
                    "info": "t:sections.footer.blocks.link_list.settings.heading.info"
                },
                {
                    "type": "link_list",
                    "id": "menu",
                    "default": "footer",
                    "label": "t:sections.footer.blocks.link_list.settings.menu.label",
                    "info": "t:sections.footer.blocks.link_list.settings.menu.info"
                }
            ]
        },
        {
            "type": "text",
            "name": "t:sections.footer.blocks.text.name",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "t:sections.footer.blocks.text.settings.heading.label"
                },
                {
                    "type": "richtext",
                    "id": "subtext",
                    "label": "t:sections.footer.blocks.text.settings.subtext.label"                }
            ]
        }
    ],
    "settings": [
        {
            "type":"select",
            "id":"color_scheme",
            "options":[
                {
                    "value": "transparent",
                    "label": "t:sections.all.colors.transparent.label"
                },
                {
                    "value": "accent-1",
                    "label": "t:sections.all.colors.accent_1.label"
                },
                {
                    "value": "accent-2",
                    "label": "t:sections.all.colors.accent_2.label"
                },
                {
                    "value": "background-1",
                    "label": "t:sections.all.colors.background_1.label"
                },
                {
                    "value": "background-2",
                    "label": "t:sections.all.colors.background_2.label"
                },
                {
                    "value": "inverse",
                    "label": "t:sections.all.colors.inverse.label"
                }
            ],
            "default": "background-1",
            "label": "t:sections.all.colors.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer.settings.header__1.content",
            "info": "t:sections.footer.settings.header__1.info"
        },
        {
            "type": "checkbox",
            "id": "newsletter_enable",
            "default": true,
            "label": "t:sections.footer.settings.newsletter_enable.label"
        },
        {
            "type": "text",
            "id": "newsletter_heading",
            "default": "Newsletter",
            "label": "t:sections.footer.settings.newsletter_heading.label"
        },
        {
            "type": "text",
            "id": "input_placeholder",
            "default": "Enter your email",
            "label": "t:sections.footer.settings.input_placeholder.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer.settings.header__2.content",
            "info": "t:sections.footer.settings.header__2.info"
        },
        {
            "type": "checkbox",
            "id": "show_social",
            "default": false,
            "label": "t:sections.footer.settings.show_social.label"
        },
        {
            "type": "checkbox",
            "id": "show_social_label",
            "default": true,
            "label": "t:sections.footer.settings.show_social_label.label"
        },
        {
            "type": "text",
            "id": "copyright",
            "label": "t:sections.footer.settings.copyright.label",
            "default": "Â© 2022 Again Faster. All Rights Reserved"
        }
    ],
    "default": {
        "blocks": [
            {
                "type": "link_list"
            },
            {
                "type": "text"
            }
        ]
    }
}

{% endschema %}