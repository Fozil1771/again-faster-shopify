{% form 'create_customer' %}



<div class="form">
    <h1>Create an Account</h1>
    <div class="form-body">
        <div class="input-group">
            <div class="input-item">
                <label for="first_name">First Name</label>
                <input type="text" value="" name="customer[first_name]" size="30" />
            </div>
            <div class="input-item">
                <label for="last_name">Last Name</label>
                <input type="text" value="" name="customer[last_name]" size="30" />
            </div>
        </div>
        <div class="input-item">
            <label for="email">Email Address</label>
            <input type="email" value="" name="customer[email]" size="30" />
        </div>
        <div class="input-item">
            <label for="password">Password</label>
            <input type="password" value="" name="customer[password]" size="30" />
        </div>
    </div>
    {{ form.errors | default_errors }}
    <button class="btn-primary form-btn form-singup" type="submit">Create an Account</button>
    <p class="form-hasAccount">Already have an account?</p>
    <a href="/account/login" class="btn-primary--outline form-btn form-login">Log in</a>
</div>



{% endform %}